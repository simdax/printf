#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>

gnl(int fd, char **line)
{
  static char	*stat[24];
  char		*op;

  stat[fd] = "prout de ouf \n io";
  if (strlen(stat[fd]) > 0)
    if (op = strchr(stat[fd], '\n'))
      {
	free(*line);
	*line = (char*)malloc(sizeof(char) * (op - stat[fd] + 1));
	strncpy(*line, stat[fd], (op - statestat[fd]-));
	return (1);
      }
  return (0);
}

int main(int argc, char **argv)
{
  char *line = NULL;
  int fd = open(argv[1], O_RDONLY);
  
  while (fd && gnl(fd, &line))
    printf("%s", line);
}
