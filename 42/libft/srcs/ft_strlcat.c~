#include <string.h>

size_t	ft_strlcat(char *dst, const char *src, size_t len)
{
	unsigned int	i;
	unsigned int	j;

	i = 0;
	j = 0;
	while (dst[j++])
		;
	while (src[i++])
		;
	while (*src && len-- > 1)
		*dst = *src++;
	*dst = '\0';
	return (i + j);
}
