#include "header.h"

int		main(int argc, char **argv)
{
	int		fd;
	int		ret;
	char	buf[BUF_SIZE + 1];

	if (argc > 2)
	{	
		ARGS_ERROR;
	}
	if (argc == 1)
	{
		FILENAME_ERROR;
	}
	else
	{
		fd = open(argv[1], O_RDONLY);
		while (ret = read(fd, buf, BUF_SIZE))
		{
			buf[ret] = '\0';
			write(1, buf, BUF_SIZE);
		}
	}
	close(fd);
	return (0);
}
