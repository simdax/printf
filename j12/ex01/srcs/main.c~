#include "header.h"

void	print(char **argv, int file)
{
	int		fd;
	int		ret;
	char	buf[BUF_SIZE + 1];

	fd = open(argv[file], O_RDONLY);
	while (ret = read(fd, buf, 64))
	{
		buf[ret] = '\0';
		write(1, buf, 64);
	}
	buf[ret] = '\0';
	close(fd);	
}

int		main(int argc, char **argv)
{
	int 	i;

	if (argc == 1)
	{
		FILENAME_ERROR;
	}
	if (argc >= 2)
	{
		i = 1;
		while (i < argc)
		{
			print(argv, i++);
			write(1, "\n", 1);
		}
	}
	return (0);
}
